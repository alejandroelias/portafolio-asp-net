@*
    Se recomienda agregar @model para garantizar el tipado del modelo.
    IEnumerable<Proyecto>, hace referencia solo al modelo Proyecto. Por lo que _SeccionProyectos puede usarse en otros contextos.
*@

@model IEnumerable<Proyecto>


@if (Model != null)
{
    <div class="text-center" style="padding-top:6rem">
        <h1>Mis trabajos recientes</h1>
        <p>Aqui puedes ver uno de mis trabajos mas recientes.</p>
    </div>

    <div class="container">
        <div class="row">
            @foreach (var proyecto in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@proyecto.ImagenURL" class="card-img-top" alt="Imagen proyecto" />
                        <div class="card-body">
                            <h5 class="card-title">@proyecto.Titulo</h5>
                            <h5 class="card-text">@proyecto.Descripcion</h5>
                        </div>
                        <div class="card-footer">
                            <a href="@proyecto.Link" class="btn btn-primary" target="_blank" rel="noreferrer noopener">Visitar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
